    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: UnitTest debug",
            "type": "python",
            "request": "launch",
            "module": "unittest"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        },
        {
            "name": "Python: Pytest debug",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "module": "pytest",
            "args": ["-v","${file}"]
        }
    ]
}